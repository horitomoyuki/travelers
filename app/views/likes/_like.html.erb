<div class="like_button_on">
  <% if @user.already_liked?(@user) %>
    <%= button_to 'いいねを取り消す', user_like_path(@user.id, @user.likes.ids), method: :delete, class: 'like-btn', remote: true %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red">
        <%= @user.likes.count %>
      </i>
  <% else %>
    <%= button_to 'いいね', user_likes_path(@user.id, @user.likes.ids), class: 'like-btn', remote: true %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
        <%= @user.likes.count %>
      </i>
  <% end %>
</div>