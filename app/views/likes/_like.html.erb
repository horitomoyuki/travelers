<div class="like_button_on">
  <% if current_user.liked_by?(current_user) %>
    <%= button_to 'いいねを取り消す', user_like_path(current_user.id, id: current_user.likes.ids), method: :delete, class: 'like-btn', remote: true %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red">
        <%= current_user.likes.count %>
      </i>
  <% else %>
    <%= button_to 'いいね', user_likes_path(current_user.id, id: current_user.likes.ids), class: 'like-btn', remote: true %>
      <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
        <%= current_user.likes.count %>
      </i>
  <% end %>
</div>