<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "トップページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆プロフィール画像%>
          </div>
          <div class='field-input'>
            <%= f.file_field :image, id:"item-image" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆ニックネーム%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆eメール%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆年齢%>
          </div>
          <div class='field-input'>
            <%= f.number_field :age, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆旅行先%>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆自己紹介%>
          </div>
          <div class='field-input'>
            <%= f.text_area :introduction, placeholder: "250文字以内で記入してください。", size: "50x5", maxlength: "250" %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
