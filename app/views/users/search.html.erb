<div class="wrapper">

  <div class="side-bar">

    <div class="side-bar-header">
      <div class="header-name">
        <div class="login-user">
          <ul class="login-user-lists">
            <li class="background-red" id="lists"><%= "#{current_user.name}" %></li>
          </ul>
          <ul class="show-lists hidden" id="pull-down">
            <li class="pull-down-list"><%= link_to "プロフィール", user_path(current_user) %></li>
            <li class="pull-down-list"><%= link_to "登録情報編集", edit_user_path(current_user) %></li>
            <li class="pull-down-list"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
      <%= image_tag "gray-logo.png", class: "side-logo__img" %>
      <div class="create-room" id="lists">
        <%= link_to "メンバーを作成する", new_room_path %>
      </div>
    </div>

    <div class="side-user-index">
      <div class='user-contents'>
        <%= search_form_for @p, url: search_users_path do |form| %>
          <%= form.label :country_id_eq, '旅先' %>
          <%= form.collection_select :country_id_eq, Country.all, :id, :name,  include_blank: '指定なし' %>
          <%= form.submit '検索' ,class: "search-btn" %>
        <% end %>
        <h3 class='title'>検索結果</h3>
        <ul class='user-lists'>
          <% if @results.length !=0 %>
            <% @results.each do |user| %>
              <%if user%>
                <li class='list'>
                  <%= link_to user_path(user.id) do %>
                    <div class='user-img-content'>
                      <%= image_tag user.image, class: "user-img" if user.image.attached? %>
                    </div>
                    <div class='user-info'>
                      <h3 class='user-name'>
                        <%= user.name %>
                      </h3>
                    </div>
                    <div class='user-info'>
                      <h3 class='user-name'>
                        <%= user.country.name %>
                      </h3>
                    </div>
                  <% end %>
                </li>
              <% end %>
            <% end %>
          <% else %>
              該当するユーザーはありません
          <% end %>
        </ul>
        <br>
        <div class='account-page' id='account-page'>
          <div class='account-page__inner--left account-page__header'>
            <%= link_to 'トップページへ戻る', root_path, class: 'btn' %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div class="chat">
    <div class="chat-header">
      <div class="left-header">
        <div class="chat-header-title">
          <p>相手を選んでトークを始めましょう！</p>
        </div>
      </div>
      <div class="right-header">
        <div class="login-room">
          <ul class="login-room-lists">
            <li class="background-yellow" id="room-lists"><%= "#{current_user.name}の参加トーク" %></li>
          </ul>
          <ul class="room-show-lists hidden" id="room-pull-down">
            <% current_user.rooms.each do |room| %>
            <li class="room-pull-down-list"><%= link_to room.name, room_talks_path(room) %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  
    <div class="rooms">
      <div class="room-upper">
        <div class="room-upper-name">
        </div>
      </div>
      <div class="room-under">
        <%= image_tag "human1.jpg", class: "room-img" %>
      </div>
    </div>
  </div>

</div>
<div class="footer">
  <p>©️ Travelers</p>
</div>