<div class="side-bar-header">
  <div class="header-name">
    <div class="login-user">
      <ul class="login-user-lists">
        <li class="background-red" id="lists"><%= "#{current_user.name}" %></li>
      </ul>
      <ul class="show-lists hidden" id="pull-down">
        <li class="pull-down-list"><%= link_to "プロフィール", user_path(current_user) %></li>
        <li class="pull-down-list"><%= link_to "登録情報編集", edit_user_path(current_user) %></li>
        <li class="pull-down-list"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
  <%= image_tag "gray-logo.png", class: "side-logo__img" %>
  <div class="create-room" id="lists">
    <%= link_to "メンバーを作成する", new_room_path %>
  </div>
</div>

<div class="side-user-index">
  <div class='user-contents'>
    <%= search_form_for @p, url: search_users_path do |form| %>
      <%= form.label :country_id_eq, '旅行先' %>
      <%= form.collection_select :country_id_eq, Country.all, :id, :name %>
      <%= form.submit '検索' ,class: "search-btn" %>
    <% end %>
    <h3 class='title'>Travelers</h3>
    <ul class='user-lists'>
      <% @users.each do |user| %>
        <li class='list'>
          <%= link_to user_path(user.id) do %>
            <div class='user-img-content'>
              <%= image_tag user.image, class: "user-img" if user.image.attached? %>
            </div>
            <div class='user-info'>
              <h3 class='user-name'>
                <%= user.name %>
              </h3>
            </div>
            <div class='user-info'>
              <h3 class='user-name'>
                <%= user.country.name %>
              </h3>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>