<div class='wrapper'>
  <div class='side-bar'>
    <%= render "side_index" %>
  </div>
  <div class='user-contents'>
    <h3 class='title'>Travelers</h3>
    <ul class='user-lists'>
      <% @users.each do |user| %>
        <li class='list'>
          <%= link_to user_path(user.id) do %>
            <div class='user-img-content'>
              <%= image_tag user.image, class: "user-img" if user.image.attached? %>
            </div>
            <div class='user-info'>
              <h3 class='user-name'><%= user.age %>æ­³</h3>
            </div>
            <div class='user-info'>
              <h3 class='user-name'><%= user.country.name %></h3>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>