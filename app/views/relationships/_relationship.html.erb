<div class="follow_button_on">
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
      <%= button_to 'フォロー解除', user_relationship_path(current_user.relationships.find_by(user_id: current_user.id, follower: @user)), method: :delete, remote: true %>
    <% else %>
      <%= button_to 'フォロー', user_relationships_path(user_id: current_user.id, follower: @user), remote: true %>
    <% end %>
  <% end %>
</div>