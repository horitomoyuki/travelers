<div class='account-page' id='account-page'>
  <div class='account-page__inner__registration clearfix'>
    <div class='account-page__inner--left account-page__registration'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages! %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆プロフィール画像%>
          </div>
          <div class='field-input'>
            <%= f.file_field :image, id:"item-image" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆ニックネーム%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆eメール%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆パスワード%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆パスワード再確認%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆年齢%>
          </div>
          <div class='field-input'>
            <%= f.number_field :age, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆性別%>
          </div>
          <div class='field-input'>
            <%= f.number_field :gender, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆旅行先%>
          </div>
          <div class='field-input-country'>
            <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :◆自己紹介%>
          </div>
          <div class='field-input'>
            <%= f.text_area :introduction, placeholder: "250文字以内で記入してください。", size: "50x5", maxlength: "250" %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
